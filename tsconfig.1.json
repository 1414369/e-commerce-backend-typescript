{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist", //change the output directory
    "sourceMap": true,
    "target": "es7", //default is es5
    "module": "commonjs", //CommonJs style module in output
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts" //which kind of files to compile
  ],
  "exclude": [
    "node_modules" //which files or directories to ignore
  ],
}